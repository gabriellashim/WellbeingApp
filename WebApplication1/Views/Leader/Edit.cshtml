@model Quokka_App.Model.WebAppUser
@using Microsoft.AspNetCore.Identity
@inject UserManager<WebAppUser> UserManager

@{
    ViewData["Title"] = "Edit Student";
    Layout = "/Pages/Shared/_Layout.cshtml"; }

<!--Edit Student's detail including assigning student to leader-->
<div style="text-align:center;">
    <h4>
        Edit Student's Details
    </h4>
    <hr />
</div>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row mb-3">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="UserName"  class="col-sm-2 col-form-label">User Name</label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
</form>

<div>
    <a asp-action="Create">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
