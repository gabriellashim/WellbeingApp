@model Quokka_App.Model.Emotion
@using Microsoft.AspNetCore.Identity
@using WebApplication1.Areas.Identity.Data
@inject UserManager<WebAppUser> UserManager

@{
    ViewData["Title"] = "Student Page";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!--Display confirmation page to students.-->

<div style="text-align:center;">
    <div class="nameContainer">
        <h2>
            Thank you! @UserManager.GetUserAsync(User).Result.FirstName
        </h2>
        <h3>Your Wellbeing Leader will contact you shortly.</h3>
        <img src="~/lib/images/1happy.png" />
    </div>
    <br />

    <div>
        <a asp-action="Create">Back to Home</a>
    </div>
</div>
