@model Quokka_App.Model.Emotion
@using Microsoft.AspNetCore.Identity
@using WebApplication1.Areas.Identity.Data
@inject UserManager<WebAppUser> UserManager

@{
    ViewData["Title"] = "Edit";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <label asp-for="studentId" class="control-label">Today's date: </label>
                <input asp-for="studentId" class="form-control" value="@UserManager.GetUserAsync(User).Result.UserName" readonly />
                <span asp-validation-for="studentId" class="text-danger"></span>
            </div>

            <h3>
                You have selected <input asp-for="feeling" class="form-control displayFeeling" readonly /> <br />
                Why have you chosen this?
            </h3>

            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input type="text" size="200" asp-for="description" class="form-control studentDescription" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <hr />

            <div class="studentRequestForm1">
                <h3>Would you like to see a wellbeing leader?</h3>
                <input type="radio" id="Stu_Yes" value="Yes" name="appt" onclick="ShowAndHideDiv();" /> Yes <br />
                <input type="radio" id="Stu_No" value="No" name="appt" onclick="ShowAndHideDiv();"> No <br />
                <input type="radio" id="Stu_Unsure" value="Unsure" name="appt" onclick="ShowAndHideDiv();"> Unsure <br />
            </div>

            <div id="StuWhenHide" class="studentRequestForm2" style="visibility:hidden">
                <div class="form-group">
                    <label asp-for="whenToSee" class="control-label">
                        When would you like to see?
                    </label>
                    <input type="radio" asp-for="whenToSee" class="form-control" value="Asap" name="whenToSee" /> As soon as possible <br />
                    <input type="radio" asp-for="whenToSee" class="form-control" value="Next week" name="whenToSee" /> Sometimes in next week <br />
                    <input type="radio" asp-for="whenToSee" class="form-control" value="Anytime" name="whenToSee" /> Anytime <br />

                    <span asp-validation-for="whenToSee" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            <div class="form-group">
                <label asp-for="date" class="control-label">Today's date: </label>
                <input asp-for="date" class="form-control" value="@DateTime.Now" readonly />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .studentDescription {
        height: 100px;
    }

    .displayFeeling {
        width: 100px;
    }
</style>
