@model Quokka_App.Model.AspNewUsers
@using Microsoft.AspNetCore.Identity
@using WebApplication1.Areas.Identity.Data

@inject SignInManager<WebAppUser> SignInManager
@inject UserManager<WebAppUser> UserManager

@{
    ViewData["Title"] = "Edit";
    Layout = "/Pages/Shared/_Layout.cshtml";
    string teacherName;
    string teacherLName;
}

<!--Edit Student's detail including assigning student to leader-->

<div style="text-align:center;">
    <h4>
        Edit Student's Details
    </h4>
    <hr />
</div>
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row mb-3">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>


    <div class="row mb-3">
        <label asp-for="UserName"  class="col-sm-2 col-form-label">User Name</label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="AccountType"  class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="AccountType" class="form-control" style="background-color:transparent;" readonly />
            <span asp-validation-for="AccountType" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="LeaderAssigned"  class="col-sm-2 col-form-label">Assign a leader </label>
        <div class="col-sm-10">
            <select id="LeaderAssigned" name="LeaderAssigned">

                <!--Iterate the table and only show available leaders from DB-->>
                @foreach (var teacher in UserManager.Users)
                {
                    teacherName = teacher.UserName;
                
                    @if (teacher.AccountType.Equals("Leader") || teacher.AccountType.Equals("Senior Leader"))
                        {
                         <option value="@teacherName">@Html.DisplayFor(modelItem => teacher.UserName)</option>}
                    }

            </select>
            <span asp-validation-for="LeaderAssigned" class="text-danger"></span>
        </div>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
  
</form>


<div>
    <a asp-action="Create">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
