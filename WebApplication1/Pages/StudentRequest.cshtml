@page
@model Quokka_App.Pages.StudentRequestModel
@{
}

<form method="post" onsubmit="return confirm('Do you really want to submit the form?');">
    <div class="studentRequestForm1">
        <h3>Would you like to see a wellbeing leader?</h3>
        <input type="radio" id="Stu_Yes" value="Yes" name="appt" onclick="ShowAndHideDiv();" /> Yes
        <input type="radio" id="Stu_No" value="No" name="appt" onclick="ShowAndHideDiv();"> No
        <input type="radio" id="Stu_Unsure" value="Unsure" name="appt" onclick="ShowAndHideDiv();"> Unsure
    </div>

    <div id="StuWhenHide" class="studentRequestForm2" style="visibility:hidden">
        <h3>When would you like to see?</h3>
        <input type="radio" id="Stu_when_asap" value="asap" name="whenToSee" />
        As soon as possible
        <input type="radio" id="Stu_when_nextweek" value="nextweek" name="whenToSee" />
        Sometimes over the next week
        <input type="radio" id="Stu_when_anytime" value="anytime" name="whenToSee" />
        Anytime. I don't mind
    </div>

    <input type="submit" name="submit" value="submit"/>
</form>

