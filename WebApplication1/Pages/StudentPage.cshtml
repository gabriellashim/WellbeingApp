@page
@model Quokka_App.Pages.StudentPageModel
@using Microsoft.AspNetCore.Identity
@using WebApplication1.Areas.Identity.Data

@inject SignInManager<WebAppUser> SignInManager
@inject UserManager<WebAppUser> UserManager
@{
    ViewData["Title"] = "StudentPage";
}


<form method="post">
    <div>How are you feeling today @UserManager.GetUserAsync(User).Result.FirstName?</div>

    <div class="row">
        <div class="col s12 m6 l6">
            <img src="~/lib/images/1happy.png" />
            <a href="/Studenttext" class="btn btn-primary">Happy</a>
        </div>
        <div class="col s12 m6 l6">
            <img src="~/lib/images/2okay.png" />
            <a href="/Studenttext" class="btn btn-primary">Okay</a>
        </div>
        <div class="col s12 m6 l6">
            <img src="~/lib/images/3annoyed.png" />
            <a href="/Studenttext" class="btn btn-primary">Annoyed</a>
        </div>
        <div class="col s12 m6 l6">
            <img src="~/lib/images/4frustrated.png" />
            <a href="/Studenttext" class="btn btn-primary">Frustrated</a>
        </div>
        <div class="col s12 m6 l6">
            <img src="~/lib/images/5angry.png" />
            <a href="/Studenttext" class="btn btn-primary">Angry</a>
        </div>
        <div class="col s12 m6 l6">
            <img src="~/lib/images/6help.png" />
            <a href="/Studenttext" class="btn btn-primary">I need help</a>

        </div>
    </div>
</form>

